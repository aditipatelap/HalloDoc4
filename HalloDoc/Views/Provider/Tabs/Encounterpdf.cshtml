@using DataAccess.ViewModel;
@model AdminDashboard
@{
    Layout = null;
}
@section style{
    <style>
        body {
            height: 100vh !important;
        }

        .encounterForm {
            font-family: "poppins";
        }

            .encounterForm h2 {
                width: 100%;
                text-align: center;
            }

        .details {
            margin: auto;
            height: 100%;
            margin-top: 20px;
            display: grid;
        }

        .data-row {
            font-size: 25px;
        }

        h2 {
            text-decoration: underline;
            font-weight: bold;
            color: #01BCE9;
        }

        h5 {
            height: 50px;
        }
    </style>
}

<div class="encounterForm h-100 mt-3">
    <div class="text-center text-info w-100 fw-semibold fs-5">
        <h2 class="fs-4">Encounter Form Details</h2>
    </div>
    <div class="details p-3">
        <div class="data-row fs-4"><span class="fw-bold">First Name: </span> @Model.encounterform.FirstName </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Last Name: </span> @Model.encounterform.LastName </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Location: </span> @Model.encounterform.Location </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Date of Birth: </span> @Model.encounterform.BirthDate </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Date of Request: </span> @Model.encounterform.Date </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Phone: </span> @Model.encounterform.Number </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Email: </span> @Model.encounterform.Email </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">History of Present Illness or Injury: </span> @Model.encounterform.HistoryOfPresentIllness </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Medical History: </span> @Model.encounterform.MedicalHistory </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Medications: </span> @Model.encounterform.Medications </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Allergies: </span> @Model.encounterform.Allergies </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Temp: </span> @Model.encounterform.Temperature </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">HR: </span> @Model.encounterform.HR </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">RR: </span> @Model.encounterform.RR </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Blood Pressure Diastolic: </span> @Model.encounterform.BPSystolic </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Blood Pressure Systolic: </span> @Model.encounterform.BPDiastolic </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">O2: </span> @Model.encounterform.O2 </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Heent: </span> @Model.encounterform.Heent </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Pain: </span> @Model.encounterform.Pain </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">CV: </span> @Model.encounterform.CV </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Chest: </span> @Model.encounterform.Chest </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">ABD: </span> @Model.encounterform.ABD </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Extremities: </span> @Model.encounterform.Extr </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Skin: </span> @Model.encounterform.Skin </div><hr class="m-0 mb-1">

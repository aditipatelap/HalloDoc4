        <div class="data-row"><span class="fw-bold">Other: </span> @Model.encounterform.Other </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Diagnosis: </span> @Model.encounterform.Diagnosis </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Treatment Plan: </span> @Model.encounterform.TreatmentPlan </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Medical Dispensed: </span> @Model.encounterform.MedicationDispensed </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">Procedures: </span> @Model.encounterform.Procedures </div><hr class="m-0 mb-1">
        <div class="data-row"><span class="fw-bold">FollowUp: </span> @Model.encounterform.FollowUp </div>
    </div>
</div>
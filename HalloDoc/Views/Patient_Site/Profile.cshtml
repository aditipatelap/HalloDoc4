 @model DataAccess.ViewModel.Dashboardpage
 <div class="container shadow mt-4">
        <div class=" d-flex justify-content-end">

            <button type="button" class="btn btn-outline-info p-2 pe-3 mt-5  button-info" onclick="location.href='@Url.Action("patientDashboard", "Patient_Site")'">
                <i class="bi bi-chevron-left i-info"></i>Back
            </button>

        </div>

        <h4 class="fw-semibold">User Profile</h4>

        <form method="post" action="UpdateProfile">

            <div class="row gy-3 mb-3">
                <div class="col-xs-12 col-sm-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" asp-for="Profiles.FirstName" placeholder="First Name" disabled>
                        <label for="comment" class="floatingLabel text-dark">First Name</label>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" asp-for="Profiles.LastName" placeholder="Last Name" disabled>
                        <label for="comment" class="floatingLabel text-dark">Last Name</label>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6">
                    <div class="form-floating">
                        <input type="date" class="form-control" asp-for="Profiles.Dob" placeholder="Date of Birth" disabled>
                    </div>
                </div>
            </div>
            <h4 class="mt-4">Contact Info</h4>
            <div class="row gy-3">

                <div class="col-lg-2">
                    <div class="form-floating">
                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example" disabled>
                            <option selected>Mobile</option>
                            <option value="1">Phone</option>
                            <option value="2">Mobile</option>
                            <option value="3">Landline</option>
                        </select>
                        <label for="floatingSelect">Type</label>
                    </div>

                </div>
                <div class="col-lg-5">
                    <div class=" form-floating">
                        <input type="tel" class="form-control p-3 ps-5 phoneNumber" placeholder="(201) 555-0123" asp-for="Profiles.PhoneNumber" disabled>
                        
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-floating">
                        <input type="email" class="form-control" placeholder="Email" asp-for="Profiles.Email" disabled>
                        <label for="comment" class="floatingLabel">Email</label>

                    </div>
                </div>


            </div>
            <h4 class="mt-4">
                Location Info
            </h4>
            <div class="row gy-3 mb-3">

                <div class="col-xs-12 col-sm-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Street" asp-for="Profiles.Street" disabled>
                        <label for="comment" class="floatingLabel text-dark">Street</label>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="City" asp-for="Profiles.City" disabled>
                        <label for="comment" class="floatingLabel text-dark">City</label>
                    </div>
                </div>
            </div>
            <div class="row gy-3">

                <div class="col-xs-12 col-sm-5">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="State" asp-for="Profiles.State" disabled>
                        <label for="comment" class="floatingLabel text-dark">State</label>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-5">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Zip Code" asp-for="Profiles.Zipcode" disabled>
                        <label for="comment" class="floatingLabel text-dark">Zip Code</label>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-2">
                    <button type="button" class=" btn btn-outline-info p-3 d-inline d-xl-none d-lg-none">
                        <i class="bi bi-geo-alt text-info me-1 i-info "></i>
                    </button>
                    <button type="button" class="btn btn-outline-info p-3 d-none d-xl-inline d-lg-inline i-info">
                        <i class="fa fa-map-marker text-info me-1 i-info"></i>Map
                    </button>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button type="button" id="editBtn" onclick="editDetails()" class="btn btn-info btn-lg">Edit</button>
                <button id="saveBtn" type="submit" class="btn btn-info btn-lg" style="display:none">
                    Save 
                </button>
              
                <button id="cancelBtn" type="button" class="btn btn-info btn-lg" style="display:none" onclick="location.href='@Url.Action("patientDashboard", "Patient_Site")'">
                    Cancel
                </button>

            </div>
        </form>
    </div>

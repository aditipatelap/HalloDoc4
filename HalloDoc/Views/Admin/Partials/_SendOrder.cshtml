@using DataAccess.ViewModel
@model AdminDashboard<div class="container">    <div class="d-flex justify-content-between mt-4">        <div class="d-flex">            <h3 class="m-0 pt-2 fs-5">Send Order</h3>        </div>        <button class="btn-back btn btn-outline-info bi bi-chevron-left" onclick="location.href='@Url.Action("Dashboard", "Admin")'">            Back        </button>    </div>    <div class="shadow rounded mt-3 py-3">        <div class="px-3">            <form action='@Url.Action("SendOrders", "Admin",new {reqid=TempData["reqId"]})' id="orderForm" class="needs-validation" data-toggle="validator" role="form" novalidate>                <div class="row g-2 mt-2">                    <div class="col-md dropdown my-2 m-auto">                        <div class="  form-floating">                            <select class="form-select h-100 w-100" id="Profession" aria-label="Floating label select example" required>                                <option selected disabled>Select Profession</option>                                @foreach (var items in Model.Healthprofessionals)
                                {                                   <option value="@items.">@items.Profession </option>                                }                            </select>                            <label for="floatingSelect">Profession</label>                            <div class="invalid-feedback">Please select Profession</div>                        </div>                    </div>                    <div class="col-md dropdown my-2 m-auto">                        <div class=" form-floating">                            <select class="form-select h-100 w-100" id="Business" aria-label="Floating label select example" required>                                <option selected disabled>Select Business</option>                                @foreach (var items in Model.sendorder.Business)
                                {                                   @* <option value="@items.Vendorid">@items.Vendorname </option>*@                                }                            </select>                            <label for="floatingSelect">Business</label>                            <div class="invalid-feedback">Please select Business</div>                        </div>                    </div>                </div>                <div class="row g-2 mt-2">                    <div class="col-md">                        <div class="form-floating">                            <input type="text" class="form-control" id="Contact" placeholder="Business Contact" @*asp-for="@Model.Orders.busineesContact"*@ required disabled>                            <label for="businessContact" class="text-secondary">Business Contact</label>                            <div class="invalid-feedback">Please enter the business contact.</div>                        </div>                    </div>                    <div class="col-md">                        <div class="form-floating">                            <input type="email" class="form-control" id="Email" placeholder="Email"@* asp-for="@Model.Orders.email"*@ required disabled>                            <label for="email" class="text-secondary">Email</label>                            <div class="invalid-feedback">Please enter a valid email address.</div>                        </div>                    </div>                </div>                <div class="row g-2 mt-2 mb-4">                    <div class="col-md">                        <div class="form-floating">                            <input type="text" class="form-control" id="FaxNumber" placeholder="Fax Number" asp-for="@Model.sendorder.FaxNumber" required disabled>                            <label for="faxNumber" class="text-secondary">Fax Number</label>                            <div class="invalid-feedback">Please enter a fax number.</div>                        </div>                    </div>                    <div class="col-md">                        <!-- Empty column -->                    </div>                </div>                <div class="form-floating my-4">                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" asp-for="@Model.sendorder.Prescription" required></textarea>                    <label for="floatingTextarea2" class="text-secondary" id="label-floating">Prescription or Order details</label>                    <div class="invalid-feedback">Please enter prescription or order details.</div>                </div>                <div class="row g-2 mt-2">                    <div class="col-md dropdown my-2 m-auto">                        <div class=" col-lg-6 form-floating mb-3">                            <input type="number" class="form-select h-100" id="floatingSelect" aria-label="Floating label select example" asp-for="@Model.sendorder." required>                            <label for="floatingSelect">Number Of Refile</label>                            <div class="invalid-feedback">Please select the number of refills.</div>                        </div>                    </div>                </div>                <div class="d-flex justify-content-end mt-4 mb-4">                    <button type="submit" class="btn-back btn btn-outline-info me-2">Submit</button>                    <button type="button" class="btn btn-danger btn-outline-danger text-light">Cancel</button>                </div>            </form>        </div>    </div></div><script>    // JavaScript for form validation    (function () {        'use strict';        // Fetch all the forms we want to apply custom Bootstrap validation styles to        var forms = document.querySelectorAll('.needs-validation');        // Loop over them and prevent submission        Array.prototype.slice.call(forms)            .forEach(function (form) {                form.addEventListener('submit', function (event) {                    if (!form.checkValidity()) {                        event.preventDefault();                        event.stopPropagation();                    }                    form.classList.add('was-validated');                }, false);            });    })();    $('.needs-validation').bootstrapValidator({        feedbackIcons: {            valid: false,            invalid: false        },        // other options and rules here    });</script><script>    $('#Profession').on('change', function () {        debugger;        var id = $('option:selected', this).val();        $('#FaxNumber').val('');        $('#Contact').val('');        $('#Email').val('');        $.ajax({            url: '/Admin/GetProfessionByBusinessName',            method: 'GET',            data: { id: id },            success: function (response) {                $('#Business').empty();                console.log(response);                $('#Business').html("<option selected disabled>" + "Select Business" + "</option>");                $.each(response, function (index, object) {                    $('#Business').append($('<option>', {                        value: object["businessId"],                        text: object["businessName"]                    }));                });            },            error: function (error) {                console.error('Error fetching data: ' + error);            }        });    });    $('#Business').change(function () {        var id = $('option:selected', this).val();        $.ajax({            url: '/Admin/GetBusinessDetails',            type: 'GET',            data: {                id: id,            },            success: function (result) {                console.log(result);                $('#FaxNumber').val(result["faxnumber"]);                $('#Contact').val(result["businesscontact"]);                $('#Email').val(result["email"]);            },            error: function (err) {                console.error(err);            }        });    });</script>
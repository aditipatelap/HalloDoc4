@using DataAccess.ViewModel;
@model AdminDashboard
<div class="modal-header bg-info ">
    <h5 class="modal-title text-white" id="exampleModalLabel">Contact Your Provider  </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">

    <div class="mb-3 text-secondary">
        Choose Communication to Send message.
    </div>
    <div>
        <input type="radio" id="SMS" />
        <label for="SMS">SMS</label>
    </div>
    <div>
        <input type="radio" id="Email" />
        <label for="Email">Email</label>
    </div>
    <div>
        <input type="radio" id="Both" />
        <label for="Both">Both</label>
    </div>
    <div class="form-floating my-4">
        <textarea class="form-control" placeholder="Message" id="floatingTextarea2" style="height: 100px"></textarea>
        <label for="floatingTextarea2" class="text-secondary" id="label-floating">Message</label>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-info btn-lg p-2 px-4 me-3 info-button me-2 ">Submit</button>
        <button type="reset" class="btn btn-outline-info btn-lg p-2 px-4 button-info" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
    </div>
</div>


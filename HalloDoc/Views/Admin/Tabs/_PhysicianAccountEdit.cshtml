<script>
    $(document).ready(function () {
        $('#ProviderProfile').submit(function (e) {
            e.preventDefault(); // Prevent default form submission

            // Serialize form data
            var formData = $(this).serialize();

            // Send AJAX request
            $.ajax({
                url: '/Admin/PostProviderProfile',
                type: 'POST',
                data: formData,
                success: function (response) {
                    // Update partial view container with new content
                    
                    $('#TabContent').html(response);
                    
                },
                error: function () {
                    // Handle errors
                }
            });
        });
    });
    
</script>
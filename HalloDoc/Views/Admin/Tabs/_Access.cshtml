@using DataAccess.ViewModel;@model AdminDashboard<link rel="stylesheet" href="~/css/AdminSite.css" asp-append-version="true" /><div class="container mt-2">    <div class="justify-content-between d-flex container-fluid mb-2 position-relative ">        <div class="">            <h3>Account Access</h3>        </div>          </div>                <div class="d-flex justify-content-end">        <button class="btn btn-info mx-2 tablink" id="CreateRole" >               Create Access            </button>        </div>       <div class="w-100 my-3"></div>    <table class="table table-hover table-responsive" style="height:75px; text-align:match-parent">        <thead>            <tr class="table-secondary">                              <td> Name</td>                <td>Account Type</td>                               <td>Actions</td>            </tr>        </thead>        <tbody>            @if (Model != null)            {                @foreach (var items in Model.accountAccess)
                {                    <tr>                                               <td>                            @items.Name                        </td>                        <td>                            @items.AccountType                        </td>                                               <td>                            <button class="btn btn-outline-info tablink" id="EditAccess" data-roleid="@items.roleid" >Edit</button>                            <button class="btn btn-outline-info deleteBtn" data-bs-toggle="modal" data-bs-target="#modeldiv" data-roleid="@items.roleid">Delete</button>                        </td>                    </tr>                }            }        </tbody>    </table></div><div class="modal" id="modeldiv" tabindex="-3" aria-labelledby="exampleModalLabel" aria-hidden="true">    <!-- Modal content -->    <div class="modal-dialog modal-dialog-centered">        <div class="modal-content">            <!-- Modal header -->            <div class="modal-header">                <h5 class="modal-title">ALERT</h5>                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>            </div>            <!-- Modal body -->            <div class="modal-body">                <p>Are you sure you want to delete?</p>            </div>            <!-- Modal footer -->            <div class="modal-footer">                <button type="button" class="btn btn-outline-info" id="confirmDeleteBtn" data-bs-dismiss="modal">Delete</button>                <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Cancel</button>                          </div>        </div>    </div></div><script>         // Handle delete button click inside the modal        $('#modeldiv').on('show.bs.modal', function (event) {            var button = $(event.relatedTarget); // Button that triggered the modal            var roleid = button.data('roleid'); // Extract roleid from data-* attributes            var modal = $(this);            modal.find('#confirmDeleteBtn').attr('data-roleid', roleid); // Pass roleid to the delete button        });        $('#confirmDeleteBtn').click(function () {            var roleid = $(this).data('roleid');            // Perform delete operation using roleid            $.ajax({                url: "/Admin/DeleteRolePost",                method: "POST",                data: { roleid: roleid },                success: function (result) {                    $("#TabContent").html(result);                    // $('#accounttype').val(0);                    // $('#rolename').val('');                    // $('.check_menu:checked').prop('checked', false);                    // form.classlist.remove('was-validated');                                   },                error: function () {                    toastr.error("Error while Create Role");                }            });                    });                   </script>
@using DataAccess.ViewModel;
@model AdminDashboard
<style>
    tr td {
        text-align: center;
    }

    tr th {
        text-align: center;
    }
</style>

@if (Model.emailLogModel != null && Model.emailLogModel.Count() > 0)
{
<div class="table-responsive mt-3 d-md-block">
    <table class="table table-hover  admin-dashboard">

        <thead class="table-head align-middle">

            <tr>
                <th>Receipient</th>
                <th>Action</th>
                <th>Role Name</th>
                <th>Email ID</th>
                <th>Create Date</th>
                <th>Sent Date</th>
                <th>Sent</th>
                <th>Sent Tries</th>
                <th>Confirmation Number</th>
            </tr>

        </thead>

        <tbody class="align-middle" id="email-log-table">   
            @foreach (var items in Model.emailLogModel)
            {
                <tr>
                    <td>@items.Receipient</td>
                    <td>@items.Action</td>
                    <td>@items.RoleName</td>
                    <td>@items.Email</td>
                    <td>@items.CreatedDate</td>
                    <td>@items.SentDate</td>
                    <td>@items.Sent</td>
                    <td>@items.SentTries</td>
                    <td>@items.ConfirmationNumber</td>
                </tr>
            }
            
        </tbody>

    </table>
</div>
}
else
{
    <div class="d-flex justify-content-center align-items-center pt-5">
        <strong class="fs-2 fw-normal text-center  text-secondary "> No Data Found </strong>
    </div>
}

<div id="my-pagination" class="d-flex justify-content-between">
    @if (Model.CurrentPage <= Model.TotalPages && Model.TotalPages > 0)
    {
        @if (Model.TotalPages != 0)
        {
            <div class="page-item disabled m-4 border-0 ">
                @*                <span class=""> @Model.CurrentPage -  @Model.TotalPages of @Model.ToatCount</span>

        *@
                <span class=""> @Model.CurrentPage of @Model.TotalPages</span>
            </div>
        }
        else
        {
            <div class="d-flex justify-content-center align-items-center pt-5">
                <strong class="fs-2 fw-normal text-center  text-secondary "> No Data Found </strong>
            </div>
        }

        <div class="mb-0 float-right m-4">
            <ul class="pagination align-items-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link custompagination" data-page="@(
                Model.CurrentPage - 1
                )"><i class="fa-solid fa-chevron-left"></i></a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link custompagination" data-page="@(
                Model.CurrentPage - 1
                )"><i class="fa-solid fa-chevron-left"></i></a>
                    </li>
                }


                <li class="page-item custompagination active">
                    <a class="page-link" href="#" data-page="@Model.CurrentPage">@Model.CurrentPage</a>
                </li>
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link custompagination" href="#" data-page="@(
                Model.CurrentPage + 1
                )"><i class="fa-solid fa-chevron-right"></i></a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <a class="page-link custompagination " href="#" data-page="@(
                Model.CurrentPage + 1
                )"><i class="fa-solid fa-chevron-right"></i></a>
                    </li>
                }
            </ul>
        </div>
    }
</div>


